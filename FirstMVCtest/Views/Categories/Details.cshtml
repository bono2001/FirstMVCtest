@model FirstMVCtest.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2>Category: @Model.Name</h2>

<h4>Collection: @Model.Collection?.Name</h4>

<hr />

<h3>Items in this Category</h3>

@if (Model.Items != null && Model.Items.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>@item.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No items found in this category.</p>
}

<p>
    <a asp-action="Index" class="btn btn-primary custom-border">Back to Categories</a>
</p>
