@model IEnumerable<FirstMVCtest.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div style="display: flex; flex-direction: column; min-height: 100vh;">
    <!-- Header met logo, titel linksboven -->
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <div style="display: flex; align-items: center;">
            <img src="~/IMG/Kaledoos.png" alt="Logo" style="width: 80px; height: auto; margin-right: 15px;" />
            <h1 style="margin: 0;">Categories</h1>
        </div>

        <!-- Create New button in een box -->
        <div>
            <a asp-action="Create" class="btn btn-primary custom-border">Create New</a>
        </div>
    </div>

    <!-- Table section -->
    <div style="flex-grow: 1;">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Collection)</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Collection?.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary custom-border btn-action">Edit</a>
                                <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-primary custom-border btn-action">Details</a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-primary custom-border btn-action">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
