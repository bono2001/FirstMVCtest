@model IEnumerable<FirstMVCtest.Models.Collection>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

@{
    ViewData["Title"] = "Collections";
}

<h1>Collections
    <span class="info-icon" style="margin-left: 10px; font-size: 48px; color: gray;" data-toggle="tooltip" data-placement="right" title="You can only create one collection.">
        <i class="fas fa-info-circle"></i>
    </span>
</h1>


@if (TempData["Error"] != null)
{
        <div class="alert alert-danger">
        @TempData["Error"]
        </div>
}

<p>
    <!-- Toon de Create knop als er geen collectie bestaat. -->
    @if (!Model.Any())
    {
            <a asp-action="Create" class="btn btn-primary custom-border">Create New</a>
    }

    


</p>

<!-- Tabel voor bestaande collecties -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-custom">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-custom">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-custom">Delete</a>
                        </div>
                    </td>
                </tr>
        }
    </tbody>
</table>

@section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
        <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip();
            });
        </script>
}
