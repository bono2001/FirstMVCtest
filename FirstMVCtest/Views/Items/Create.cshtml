@model FirstMVCtest.Models.ItemEditViewModel

@{
    ViewData["Title"] = "Create Item";
}

<h1>Create Item</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name -->
            <div class="form-group">
                <label asp-for="Item.Name" class="control-label"></label>
                <input asp-for="Item.Name" class="form-control" />
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Item.Description" class="control-label"></label>
                <input asp-for="Item.Description" class="form-control" />
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div>

            <!-- Quantity -->
            <div class="form-group">
                <label asp-for="Item.Quantity" class="control-label"></label>
                <input asp-for="Item.Quantity" class="form-control" />
                <span asp-validation-for="Item.Quantity" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group">
                <label asp-for="Item.Price" class="control-label"></label>
                <input asp-for="Item.Price" class="form-control" />
                <span asp-validation-for="Item.Price" class="text-danger"></span>
            </div>

            <!-- Value -->
            <div class="form-group">
                <label asp-for="Item.Value" class="control-label"></label>
                <input asp-for="Item.Value" class="form-control" />
                <span asp-validation-for="Item.Value" class="text-danger"></span>
            </div>

            <!-- Purchase Date -->
            <div class="form-group">
                <label asp-for="Item.PurchaseDate" class="control-label"></label>
                <input asp-for="Item.PurchaseDate" class="form-control" type="date" />
                <span asp-validation-for="Item.PurchaseDate" class="text-danger"></span>
            </div>

            <!-- Condition -->
            <div class="form-group">
                <label asp-for="Item.Condition" class="control-label"></label>
                <select asp-for="Item.Condition" class="form-control">
                    <option value="New">New</option>
                    <option value="Good">Good</option>
                    <option value="Refurbished">Refurbished</option>
                    <option value="Used">Used</option>
                    <option value="Broken">Broken</option>
                </select>
                <span asp-validation-for="Item.Condition" class="text-danger"></span>
            </div>

            <!-- Origin -->
            <div class="form-group">
                <label asp-for="Item.Origin" class="control-label"></label>
                <input asp-for="Item.Origin" class="form-control" />
                <span asp-validation-for="Item.Origin" class="text-danger"></span>
            </div>

            <!-- For Sale -->
            <div class="form-group">
                <label asp-for="Item.ForSale" class="control-label"></label>
                <select asp-for="Item.ForSale" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="Item.ForSale" class="text-danger"></span>
            </div>

            <!-- For Trade -->
            <div class="form-group">
                <label asp-for="Item.ForTrade" class="control-label"></label>
                <select asp-for="Item.ForTrade" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="Item.ForTrade" class="text-danger"></span>
            </div>

            <!-- Categories (Checkboxes) -->
            <div class="form-group">
                <label for="Categories">Categories</label>
                <div>
                    @foreach (var category in Model.Categories)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="@category.Id" name="SelectedCategoryIds"
                            @(Model.SelectedCategoryIds.Contains(category.Id) ? "checked" : "") />
                            <label class="form-check-label">@category.Name</label>
                        </div>
                    }
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
